@model ModelTimeTableList
@{
    ViewBag.Title = "Generated TimeTable";
}
<link href="~/css/timetable.css" rel="stylesheet" />
<div>
    <div class="row mb-3">
        <h2>TimeTable</h2>
    </div>
    <div class="row">
        <table class="table table-bordered">
            <thead class="TimeTableHeader">
                <tr>
                    @for (int i = 1; i <= Model.WorkingDays; i++)
                    {
                        <th>Day @i</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model.TimetableRows)
                {
                    <tr>
                        @foreach (var subject in row.Subjects)
                        {
                            <td>@subject</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>